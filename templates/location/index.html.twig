{% extends 'base.html.twig' %}

{% block title %}Location index{% endblock %}

{% block body %}
    {% embed "tools/card.html.twig" %}
        {% block card_title %}Location index{% endblock %}
        {% block card_tools %}
            <a href="{{ path('app_location_new') }}">Create new</a>
        {% endblock %}
        {% block card_body %}
            <table class="table" style="width: 100%;">
                <thead>
                <tr>
                    <th>Client</th>
                    <th>Location Date</th>
                    <th>Return Date</th>
                    <th>Total Amount</th>
                    <th>Transport Price</th>
                    <th>Guard Price</th>
                    <th>Status</th>
                    <th>Address</th>
                    <th>Created At</th>
                    <th colspan="2">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for location in locations %}
                    <tr>
                        <td>{{ location.client}}</td>
                        <td>{{ location.locationDate ? location.locationDate|date('Y-m-d') : '' }}</td>
                        <td>{{ location.returnDate ? location.returnDate|date('Y-m-d') : '' }}</td>
                        <td>{{ location.totalAmount }}</td>
                        <td>{{ location.transportPrice }}</td>
                        <td>{{ location.guardPrice }}</td>
                        <td>{{ location.status }}</td>
                        <td>{{ location.address }}</td>
                        <td>{{ location.createdAt ? location.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>
                            <a href="{{ path('app_location_show', {'id': location.id}) }}">show</a>
                        </td>
                        <td>
                            <a href="{{ path('app_location_edit', {'id': location.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="10">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endblock %}
    {% endembed %}
{% endblock %}
