{# templates/list/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Product List{% endblock %}

{% block body %}
    <h1>Product List</h1>
    <style>
        .card {
            border: 1px solid #ddd;
            border-radius: 5px;
            overflow: hidden;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            width:250px;
        }

        .card-img-top {
            width: 200px;
            height: auto;
            object-fit: cover;
        }

        .card-body {
            padding: 15px;
        }

        .card-title {
            font-size: 1.25rem;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .card-text {
            margin-bottom: 10px;
        }

        .btn {
            margin-right: 5px;
        }

        .alert-warning {
            text-align: center;
        }
    </style>
    <div class="row">
        {% for product in products %}
            <div class="col-md-4 mb-3">
                <div class="card">
                    {% if product.image %}
                        <img src="{{ asset('product/images/' ~ product.image) }}" class="card-img-top" alt="{{ product.name }}">
                    {% else %}
                        <img src="{{ asset('images/no-image.png') }}" class="card-img-top" alt="No image available">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text">{{ product.description }}</p>
                        <p class="card-text">Status: {{ product.status }}</p>
                        <p class="card-text">Quantity: {{ product.quantite }}</p>
                        <p class="card-text">Updated At: {{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</p>
                        <form action="{{ path('add_location_detail') }}" method="post">
                            <input type="hidden" name="product_id" value="{{ product.id }}">
                            <input type="hidden" name="location_id" value="1"> {# Replace with dynamic location id #}
                            <input type="hidden" name="quantity" value="1">
                            <button type="submit">Add to Location</button>
                        </form>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-md-12">
                <div class="alert alert-warning" role="alert">
                    No products found.
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
