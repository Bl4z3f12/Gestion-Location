{% extends 'base.html.twig' %}

{% block title %}Welcome to Location Manager{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card text-center mb-4">
                    <div class="card-body d-flex align-items-center justify-content-center">
                        <h1 class="card-title">Welcome To Location Manager</h1>
                    </div>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-4 mb-3">
                <div class="card text-center">
                    <a href="{{ path("app_location_index") }}">
                        <div class="card-body d-flex align-items-center justify-content-center">
                            <h2 class="card-title">Location</h2>
                        </div>
                    </a>
                </div>
            </div>
            
            <div class="col-md-4 mb-3">
                <div class="card text-center">
                    <a href="{{ path("app_client_index") }}">
                        <div class="card-body d-flex align-items-center justify-content-center">
                            <h2 class="card-title">Client</h2>
                        </div>
                    </a>
                </div>
            </div>
            
            <div class="col-md-4 mb-3">
                <div class="card text-center">
                    <a href="{{ path("app_product_index") }}">
                        <div class="card-body d-flex align-items-center justify-content-center">
                            <h2 class="card-title">Product</h2>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
