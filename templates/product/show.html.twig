{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    {% embed 'tools/card.html.twig' %}
        {% block card_title %}
            {{ product.name }}
        {% endblock %}
        
        {% block card_tools %}
            <a href="{{ path('app_product_index') }}">back to list</a>
        {% endblock %}
        
        {% block card_body %}
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ product.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ product.name }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ product.description }}</td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>{{ product.status }}</td>
                    </tr>
                    <tr>
                        <th>Quantite</th>
                        <td>{{ product.quantite }}</td>
                    </tr>
                    <tr>
                        <th>Image</th>
                        <td>
                            {% if product.image %}
                                <img src="{{ asset('product/images/' ~ product.image) }}" alt="{{ product.name }}" style="max-width: 100px;">
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>UpdatedAt</th>
                        <td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                </tbody>
            </table>
            <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>
            {{ include('product/_delete_form.html.twig') }}
        {% endblock %}
    {% endembed %}
{% endblock %}
