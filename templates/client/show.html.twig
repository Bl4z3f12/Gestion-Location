{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    {% embed "tools/card.html.twig" %}
        {% block card_title %}Client{% endblock %}

        {% block card_body %}
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ client.id }}</td>
                    </tr>
                    <tr>
                        <th>FullName</th>
                        <td>{{ client.fullName }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ client.email }}</td>
                    </tr>
                    <tr>
                        <th>PhoneNumber</th>
                        <td>{{ client.phoneNumber }}</td>
                    </tr>
                    <tr>
                        <th>Address</th>
                        <td>{{ client.address }}</td>
                    </tr>
                    <tr>
                        <th>City</th>
                        <td>{{ client.city }}</td>
                    </tr>
                    <tr>
                        <th>CreatedAt</th>
                        <td>{{ client.createdAt ? client.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                </tbody>
            </table>

            <a href="{{ path('app_client_index') }}">back to list</a>
            <a href="{{ path('app_client_edit', {'id': client.id}) }}">edit</a>

            {{ include('client/_delete_form.html.twig') }}
        {% endblock %}
    {% endembed %}
{% endblock %}
